                        <a href='/products/<%= foundProduct._id %>/edit'><button class="btn btn-primary">Edit
                                Product</button></a>
                        <a href='/products'><button class="btn btn-primary">Back to Products</button></a>
                        <a href="#"><button class="btn btn-primary">Add to cart</button></a>
                        <a href='#'><button class="btn btn-success">Buy Now</button></a>
                        <form action='/products/<%= foundProduct._id %>?_method=DELETE' method='POST'>
                            <button class="btn btn-danger">Delete</button>
                        </form>
                    </div>
                </div>
            </div>
            <div class="col"></div>
        </div>
