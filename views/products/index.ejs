<%- include('../partials/header') %>




    <h1 style="margin-top: 50px;">All Products here</h1>
    <% for(product of foundProducts){ %>
        <div class="card mb-3">
            <div class="row">
                <div class="col-md-4">
                    <img class="img-fluid" alt="" src="<%= product.images[0] ?  product.images[0].url : '' %> ">
                </div>
                <div class="col-md-8">
                    <h5 class="card-title">
                        <%= product.name %>
                    </h5>
                    <h4>
                        Category:
                        <%= product.category %>
                    </h4>
                    <p>
                        Rs.
                        <%= product.price %>
                    </p>
                    <a href='/products/<%= product._id %>'><button class="btn btn-primary">Show More</button></a>
                    <a href='/products/<%= product._id %>/buy'><button class="btn btn-success">Buy Now</button></a>
                </div>
            </div>
        </div>
        <% } %>




            <%- include('../partials/footer') %>