<body>
    <header>
        <nav class="navbar navbar-expand-lg fixed-top navbar-dark bg-dark">
            <div class="container-fluid">
                <a class="navbar-brand" href="#">CoMeds</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                    data-bs-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false"
                    aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
                    <div class="collapse navbar-collapse" id="navbarSupportedContent">
                        <div class="navbar-nav">
                            <a class="nav-link" href="/products/new">Sell on CoMeds</a>
                            <a class="nav-link" href="#abt">About Us</a>
                            <a class="nav-link" href="/users/login">Login</a>
                            <form action='/user/logout' method='POST'>
                                <button type="button" class="btn btn-primary" id="signout"><svg
                                        xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                                        class="bi bi-power" viewBox="0 0 16 16">
                                        <path d="M7.5 1v7h1V1h-1z" />
                                        <path
                                            d="M3 8.812a4.999 4.999 0 0 1 2.578-4.375l-.485-.874A6 6 0 1 0 11 3.616l-.501.865A5 5 0 1 1 3 8.812z" />
                                    </svg> Signout</button>
                            </form>
                        </div>
                    </div>
                </div>
        </nav>
    </header>
    <div class="container">
        <div class="row">
            <div class="col"></div>
            <div class="col-lg-6 col-md-6 col-sm-8 col-xs-10" style="margin-top: 8%;">
                <div class="card">
                    <h1 class="display-6" style="text-align: center;">All Products here</h1>
                </div>
                <% for(product of foundProducts){ %>
                    <div class="card mt-5">
                        <div class="card-body" style="text-align: center;">
                            <a href='/products/<%= product._id %>'>
                                <button class="btn btn-primary">
                                    <h3>
                                        <%= product.name %>
                                    </h3>
                                </button>
                            </a>
                            <h4>
                                <%= product.category %>
                            </h4>
                            <p>
                                <%= product.price %>
                            </p>
                        </div>
                    </div>
                    <% } %>

            </div>
            <div class="col"></div>
        </div>
    </div>
